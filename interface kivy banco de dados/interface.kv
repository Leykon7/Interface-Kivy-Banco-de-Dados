#:kivy 1.11.1
<MyWidget>:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            text: 'Interface do Banco de Dados'
            font_size: '28sp'
        Label:
        Label:
            text: 'Digite a data inicial no formato DD/MM/AAAA :'
        TextInput:
            id: datai
            text: '01/01/2000'
        Label:
        Label:
            text: 'Digite a hora inicial no formato HH:MM:SS :'
        TextInput:
            id: horai
            text: '12:00:00'
        Label:
        Label:
        Label:
            text: 'Digite a data final no formato DD/MM/AAAA :'
        TextInput:
            id: dataf
            text: '01/01/2000'
        Label:
        Label:
            text: 'Digite a hora final no formato HH:MM:SS :'
        TextInput:
            id: horaf
            text: '12:00:00'
        Label:
        Label:
        Button:
            id: pesquisar
            text: 'Pesquisar'
            on_release: root.pesquisar()

    BoxLayout:
        id: grafico


    
