#:kivy 1.11.1
<MyWidget>:
    orientation: 'horizontal'
    Label:
        size_hint_x: 0.05
    BoxLayout:
        orientation: 'vertical'
        Label:
        Label:
            text: 'Interface do Banco de Dados'
            font_size: '28sp'
        Label:
        Label:
            text: 'Digite a data inicial no formato DD/MM/AAAA :'
        BoxLayout:
            orientation:'horizontal'
            Label:
            TextInput:
                id: datai
                text: '23/06/2022'
                halign: 'center'
            Label:
        Label:
        Label:
            text: 'Digite a hora inicial no formato HH:MM:SS :'
        BoxLayout:
            orientation:'horizontal'
            Label:
            TextInput:
                id: horai
                text: '10:17:00'
                halign: 'center'
            Label:
        Label:
        Label:
        Label:
            text: 'Digite a data final no formato DD/MM/AAAA :'
        BoxLayout:
            orientation:'horizontal'
            Label:
            TextInput:
                id: dataf
                text: '23/06/2022'
                halign: 'center'
            Label:
        Label:
        Label:
            text: 'Digite a hora final no formato HH:MM:SS :'
        BoxLayout:
            orientation:'horizontal'
            Label:
            TextInput:
                id: horaf
                text: '10:23:00'
                halign: 'center'
            Label:
        Label:
        Spinner:
            id: seletor
            text: 'Informação a ser consultada'
            values: ['Temperatura', 'Pressão', 'Umidade', 'Consumo']
        Label:
        Button:
            id: pesquisar
            text: 'Pesquisar'
            on_release: root.pesquisar()
        Label:
    Label:
        size_hint_x: 0.05
    BoxLayout:
        id: grafico
        size_hint_x: 1


    
